---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <image>
      <url>{{ site.url }}{{ site.baseurl }}/favicon.ico</url>
      <title>{{ site.title | xml_escape }}</title>
      <link>{{ site.url }}{{ site.baseurl }}</link>
    </image>
    <atom:link href="{{ "/feed.xml" | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>


    {% for post in site.posts limit:1000 %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <atom:name>{{ site.author | default: site.author | xml_escape }}</atom:name>
        <category>{{ post.category | xml_escape }}</category>
        <description>
          <atom:content type="html" xml:base="{{ post.url | absolute_url | xml_escape }}"><![CDATA[{{ post.summary | markdownify }}{{ post.excerpt | markdownify }}<a href="{{ post.url | prepend: site.baseurl | prepend: site.url }}">Go to the full article</a>]]>
          </atom:content>        
        </description>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        <link>{{ post.url | prepend: site.baseurl | prepend: site.url }}</link>
        <guid isPermaLink="true">{{ post.url | prepend: site.baseurl | prepend: site.url }}</guid>
        <media:thumbnail xmlns:media="http://search.yahoo.com/mrss/" url="{{ site.url }}{{ site.baseurl }}{{ post.thumbnail | xml_escape }}" />
      </item>
    {% endfor %} 
  </channel>
</rss>